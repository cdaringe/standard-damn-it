{
  "name": "standard-damn-it",
  "version": "1.0.0",
  "bin": "src/bin.js",
  "main": "src/index.js",
  "license": "MIT",
  "files": [
    "src/bin.js",
    "src/index.js"
  ],
  "dependencies": {
    "execa": "^0.9.0",
    "fs-extra": "^5.0.0",
    "meow": "^5.0.0",
    "pkg-up": "^2.0.0"
  },
  "scripts": {
    "build": "tsc",
    "format": "prettier-standard '{src,test,scripts}/**/*.{js,jsx,ts,tsx}'",
    "lint": "standard '{src,test,scripts}/**/*.{ts,tsx}'"
  },
  "devDependencies": {
    "@types/node": "^11.9.4",
    "@typescript-eslint/parser": "^1.3.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.4",
    "prettier-standard": "^9.1.1",
    "standard": "^12.0.1",
    "typescript": "^3.3.3"
  },
  "repository": "git@github.com:cdaringe/standard-damn-it.git",
  "author": "cdaringe <christopher.dieringer@gmail.com>",
  "keywords": [
    "standard",
    "standardjs",
    "typescript",
    "format",
    "formatter",
    "damn",
    "it"
  ],
  "standard": {
    "parser": "@typescript-eslint/parser",
    "standardPlugins": [
      "typescript"
    ],
    "ignore": [
      "**/*.d.ts"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "{src,test,scripts}/**/*.{js,jsx,ts,tsx}": [
        "yarn format",
        "yarn lint",
        "git add"
      ]
    }
  }
}
